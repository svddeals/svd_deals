# Prevent directory listing
Options -Indexes

# Allow access to specific files
<Files "index.html">
    Require all granted
</Files>

<Files "styles.css">
    Require all granted
</Files>

<Files "scripts.js">
    Require all granted
</Files>

<Files "SVD_Deals-Logo.png">
    Require all granted
</Files>

<Files "Links.m3u">
    Require all granted
</Files>

# Deny access to other files with specific extensions
<FilesMatch "\.(html|css|js|m3u)$">
    Require all denied
</FilesMatch>

# Prevent access to .htaccess itself
<Files ".htaccess">
    Require all denied
</Files>

# Ensure no directory browsing
Options -Indexes
